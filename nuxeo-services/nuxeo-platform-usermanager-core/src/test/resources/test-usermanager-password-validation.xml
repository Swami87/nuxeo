<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.usermanager.test.override">

  <require>org.nuxeo.ecm.platform.usermanager.test</require>
  <require>org.nuxeo.ecm.platform.usermanager.properties</require>


  <extension target="org.nuxeo.ecm.platform.usermanager.UserService"
    point="userManager">
    <userManager>
      <userPasswordPattern>
        ^\w*(?=.{8,})(?=.*\d)(?=(.*[a-z]){2,})(?=.*[A-Z])\w*$
      </userPasswordPattern>
    </userManager>
  </extension>


  <extension target="org.nuxeo.runtime.ConfigurationService" point="configuration">
    <documentation>
      Controls whether we check the validity of password when changing it.

      @since 8.4
    </documentation>
    <property name="nuxeo.usermanager.check.password">true</property>
  </extension>



</component>
